<div class="container">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Users</h2>
      </div>
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th></th>
            <th>Email</th>
            <th>Role</th>
            <th>Edit user</th>
            <th>Delete user</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
